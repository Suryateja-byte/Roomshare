{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "MAX_THINKING_TOKENS": "31999"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR/.claude/hooks/guard_bash.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR/.claude/hooks/post_edit_format.py\"",
            "timeout": 120
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR/.claude/hooks/stop_quality_gate.py\"",
            "timeout": 900
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(pnpm:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(wc:*)",
      "Bash(du:*)",
      "Bash(xargs:*)",
      "WebSearch",
      "WebFetch(domain:developers.google.com)",
      "WebFetch(domain:sentry.io)",
      "WebFetch(domain:www.mapbox.com)",
      "WebFetch(domain:supabase.com)",
      "WebFetch(domain:upstash.com)",
      "WebFetch(domain:resend.com)",
      "WebFetch(domain:visgl.github.io)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_wait_for",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_take_screenshot",
      "mcp__playwright__browser_evaluate",
      "mcp__playwright__browser_console_messages",
      "mcp__playwright__browser_snapshot",
      "mcp__playwright__browser_close"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(curl:*)",
      "WebFetch(domain:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./**/*.pem)",
      "Read(./**/*id_rsa*)",
      "Read(./**/*id_ed25519*)",
      "Read(./**/*credentials*)",
      "Read(./**/*token*)",
      "Edit(./.env)",
      "Edit(./.env.*)",
      "Edit(./secrets/**)",
      "Edit(./**/*.pem)",
      "Edit(./**/*id_rsa*)",
      "Edit(./**/*id_ed25519*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "python3 .claude/scripts/context-monitor.py"
  }
}
